<div class="user-show">

  <header>
    <h2>Hello <%=@user.username.capitalize%>! Here is a list of your wines.</h2> 
  </header>

  <section id="wine-list">
    <% @user.wines.each do |wine| %>
      <a href="/wines/<%= wine.id %>"><%= wine.name %></a>
    <% end %>
  </section>
  


  <footer id="account-settings">
    <h3 id="links"> 
    <a class="white-link" href="/wines/new">New Bottle</a>
    <a class="white-link" href="/users/<%= @user.slug %>/edit">Edit Account</a>
    <a class="white-link" href="/logout">Log Out</a>
    </h3>
  </footer>

</div>

