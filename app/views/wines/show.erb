<div class="wine">
  
  <section id="img">
    <img src="/images/bottles.png">
  </section>
  
  <header id="update-link">
    <h3 id="edit-links">
      <a class="white-link" href="/wines/<%=@wine.id%>/edit">Update Bottle</a>
      <form id="delete-form" action="/wines/<%= @wine.id %>" method="post">
        <input type="hidden" name="_method" value="delete">
        <input class="white-link" type="submit" value="Delete">
      </form>
    </h3>
  </header>

  <section id="description">
    <h2>Name: <%= @wine.name %><br></h2>
    <% if @wine.wine_type == "Select One" %>
      <h2>Wine Type: <%= "You do not have a wine type selected" %></h2>
    <% else %>
      <h2>Wine Type: <%= @wine.wine_type %><br></h2>
    <% end %>
    <% if @wine.country == nil %>
      <h2>Country: <%= "You do not have a country selected" %></h2>
    <% else %>
      <h2>Country: <%= @wine.country.name %><br></h2>
    <% end %>
    <h2>Year Sealed: <%= @wine.year_sealed %><br></h2>
    <h2>Price: <%= @wine.price %></h2>

  </section>
</div>
  
  

